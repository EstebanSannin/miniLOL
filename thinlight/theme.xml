<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE theme [
    <!ELEMENT theme (file*)>
    <!ATTLIST theme
        name   CDATA #REQUIRED
        author CDATA #REQUIRED
    >
]>

<theme name="Thin Light" author="meh. &amp; blawl">
    <list>
        <link><![CDATA[<div class="#{class}" id="#{id}">#{before}<div class="url"><a href="#{url}" target="#{target}" #{attributes}>#{text}</a></div><div class="description">#{after}</div></div>]]></link>
    </list>

    <templates>
        <template name="blog/template"/>
        <template name="blog/editors"/>
    </templates>

    <styles>
        <style name="core"/>
        <style name="blog/style"/>
    </styles>
</theme>
