<?xml version="1.0" encoding="utf-8"?>

<template>
    <global><![CDATA[
        <div style="float: left">
        Choose the theme you want to use: 
        </div>
        
        <div class="chooser" style="float: left; margin-left: 5px;">
            <form><select onchange="var name = this.options.item(this.selectedIndex).value; miniLOL.module.execute('Theme Switcher', { choose: true, theme: name }); miniLOL.module.execute('Theme Switcher', { theme: name });">
                #{data}
            </select></form>
        </div>
    ]]></global>

    <theme><![CDATA[
        <option #{SELECTED} value="#{name}">#{name}</option>
    ]]></theme>
</template>
