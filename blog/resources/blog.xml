<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE blog [
    <!ELEMENT blog (template, post*)>

    <!ELEMENT template (#PCDATA)>

    <!ELEMENT post (#PCDATA)>
    <!ATTLIST post
        title CDATA #REQUIRED
        id    ID    #REQUIRED
    >
]>

<blog>
    <template><![CDATA[
        <div class="blog_post">
            <div class="title">#{title}</div>
            <div class="content">#{content}</div>
        </div>
    ]]></template>

    <post id="1" title="101 ways to nigguz"><![CDATA[
        NIGGUZ
    ]]></post>
</blog>
