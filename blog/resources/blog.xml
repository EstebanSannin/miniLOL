<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE blog [
    <!ELEMENT blog (template, post*)>

    <!ELEMENT template (page, post)>
    <!ELEMENT page  (#PCDATA)>
    <!ELEMENT post  (#PCDATA)>

    <!ELEMENT post (#PCDATA)>
    <!ATTLIST post
        title CDATA #REQUIRED
        date  CDATA #REQUIRED
        id    ID    #REQUIRED
    >
]>

<blog>
    <template>
        <posts><![CDATA[
            <div class="blog">
                <div class="page">
                    #{posts}
                    #{pager}
                </div>
            </div>
        ]]></posts>

        <post><![CDATA[
            <div class="blog">
                <div class="post">
                    <div class="title">#{title}</div>
                    <div class="content">#{content}</div>
                </div>
            </div>
        ]]></post>

        <pager><![CDATA[
            <div class="pager">
                #{previous}
                #{pages}
                #{next}
            </div>
            ]]>
            <previous><![CDATA[<div class="previous">&lt;</div>]]></previous>
            <number><![CDATA[<div class="number">#{number}</div>]]></number>
            <next><![CDATA[<div class="previous">&lt;</div>]]></next>
        </pager>
    </template>

