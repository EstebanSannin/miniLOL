<?xml version="1.0" encoding="utf-8"?>

<template>
    <global><![CDATA[
        <div style="float: left">
        Choose the theme you want to use: 
        </div>
        
        <div class="chooser" style="float: left; margin-left: 5px;">
            <form><select>
                #{data}
            </select></form>
        </div>
    ]]></global>

    <theme><![CDATA[
        <option #{SELECTED} onclick="miniLOL.module.execute('ThemeSwitcher', { choose: true, theme: '#{name}' }); miniLOL.module.execute('ThemeSwitcher', { theme: '#{name}' });">#{name}</option>
    ]]></theme>
</template>
